{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "include": ["src/**/*"],
  "exclude": ["src/client/**/*", "vite.config.js", "eslint.config.js"]
}
